<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="me.key.android2.keychain.viewmodels.ScanANewKeyViewModel"/>
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_scan_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/material_blue_500"
        app:cardElevation="4dp"
        app:cardCornerRadius="6dp">

        <TextView
            android:id="@+id/editText"
            android:layout_width="214dp"
            android:layout_height="match_parent"
            android:layout_gravity="start|top"
            android:paddingTop="16dp"
            android:paddingStart="16dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="Scan your keys and store \nthem safely\non the \ncloud!"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:text="Scan my key" />

        <ImageView
            android:id="@+id/iv_find_a_kiosk"
            android:layout_gravity="top|end"
            android:layout_width="274dp"
            android:layout_height="184dp"
            android:padding="@dimen/material_component_cards_top_and_bottom_padding"
            android:src="@drawable/scan"
            tools:src="@drawable/scan" />

    </android.support.v7.widget.CardView>
</layout>